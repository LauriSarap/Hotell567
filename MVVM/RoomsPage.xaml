<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Hotell567.MVVM"
             xmlns:data="clr-namespace:Hotell567.Data"
             x:Class="Hotell567.MVVM.RoomsPage" Padding="50"
             Title="Rooms"
             BackgroundColor="White">


    <CollectionView x:Name="roomsCollectionView"
                    VerticalScrollBarVisibility="Always"
                    SelectionMode="None">

        <!--Data, which is displayed in the CollectionView-->
        <CollectionView.ItemsSource>
                
            <x:Array Type="{x:Type data:Room}">
                <data:Room
                    RoomNumber="1"
                    Description="Description.."/>
                <data:Room
                    RoomNumber="2"
                    Description="Description.."/>
                <data:Room
                    RoomNumber="3"
                    Description="Description.."/>
                <data:Room
                    RoomNumber="4"
                    Description="Description.."/>
                <data:Room
                    RoomNumber="5"
                    Description="Description.."/>
                <data:Room
                    RoomNumber="6"
                    Description="Description.."/>
            </x:Array>

        </CollectionView.ItemsSource>

        <!--How the items are shown (verticalgrid with 2 columns)-->
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical"
                             Span="2"
                             VerticalItemSpacing="20"/>
        </CollectionView.ItemsLayout>

        <!--The appearance of each item-->
        <CollectionView.ItemTemplate>

            <!--Create a template for displaying a room-->
            <DataTemplate x:DataType="data:Room">

                <Frame Background="White">
                    <Grid ColumnDefinitions="*, 20">
                        <StackLayout Orientation="Horizontal">

                            <StackLayout Orientation="Vertical">

                                <Label Text="{Binding RoomNumber, StringFormat='Room number: {0:F0}'}"
                                       TextColor="Black"
                                       FontSize="20"/>

                                <Image Source="{Binding Image}"
                                       HorizontalOptions="Start"/>

                                <Label Text="{Binding Description}"
                                       TextColor="Black"
                                       FontSize="20"/>

                            </StackLayout>

                            <Button Text="Learn more"
                                    TextColor="Black"
                                    BorderWidth="2"                          
                                    BorderColor="Gray"
                                    BackgroundColor="White"
                                    CornerRadius="20"
                                    VerticalOptions="Center"
                                    HorizontalOptions="EndAndExpand"
                                    Margin="5"
                                    Clicked="TapGestureRecognizer_Tapped"/>

                        </StackLayout>
                    </Grid>
                </Frame>

            </DataTemplate>

        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>

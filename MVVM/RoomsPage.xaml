<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="Hotell567.MVVM.RoomsPage" 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:data="clr-namespace:Hotell567.Data"
    xmlns:logic="using:Hotell567.Logic"

    BackgroundColor="{DynamicResource PrimaryBackground}"
    x:DataType="data:RoomsViewModel"
    Title="{Binding Title}">

    <Grid ColumnDefinitions="250, *"
          ColumnSpacing="0"
          RowDefinitions="*, *"
          RowSpacing="0">

        <Button Text="Get Rooms" 
                Command="{Binding GetRoomsCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Style="{DynamicResource BaseButtonStyle}"
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                WidthRequest="240"
                VerticalOptions="Start"
                HorizontalOptions="Center"/>

        <!--<ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           HorizontalOptions="Fill"
                           VerticalOptions="Center"
                           Color="{StaticResource Secondary}"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"/>
        -->

        <CollectionView
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            ItemsSource="{Binding Rooms}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="data:Room">
                    <Grid Padding="10">
                        <Frame HeightRequest="125" Style="{DynamicResource BaseFrameStyle}">
                            <Grid Padding="0" ColumnDefinitions="125,*">
                                <Image Aspect="AspectFill" 
                                       Source="{Binding room_image_name, StringFormat='{0}.jpg'}"
                                       WidthRequest="125"
                                       HeightRequest="125"/>
                                <VerticalStackLayout
                                    VerticalOptions="Start"
                                    Grid.Column="1"
                                    Padding="10">
                                    <Label Style="{DynamicResource MediumLabel}" 
                                           Text="{Binding room_type}" 
                                           HorizontalOptions="Start"/>
                                    <Label Style="{DynamicResource SmallLabel}" 
                                           Text="{Binding room_description}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>



<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotell567.MVVM.MainPage"
             Title="Home"
             BackgroundColor="{DynamicResource PrimaryBackground}">


    <StackLayout
        Spacing="15"
        Padding="30,0"
        VerticalOptions="Center">

        <Label
            x:Name="WelcomeLabel"
            Text="Welcome!"
            Style="{DynamicResource LargeLabel}" 
            FontSize="140"
            HorizontalOptions="Center"/>

        <Label
            Text="The Richman Hotel"
            Style="{DynamicResource LargeLabel}"
            HorizontalOptions="Center"/>

        <Button
            Text="See available listings"
            Clicked="SeeAvailableListings"
            Style="{DynamicResource BaseButtonStyle}"
            HorizontalOptions="Center" 
            Margin="20"
            HeightRequest="100"
            FontSize="48"/>
    </StackLayout>
</ContentPage>

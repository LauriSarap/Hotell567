<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotell567.MVVM.MainPage"
             Title="Home"
             BackgroundColor="White">


    <StackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Start">

        <!-- Navigation Bar -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start">
            <Button x:Name="HomeBtn" Text="Home" Clicked="HomeBtn_Clicked"/>
            <Button x:Name="LoginPageBtn" Text="Login" Clicked="LoginBtn_Clicked" />
        </StackLayout>

        <!-- Page Content -->

        <StackLayout VerticalOptions="Start">
            <Label
                x:Name="WelcomeLabel"
                Text="Welcome!"
                Style="{DynamicResource baseTitleStyle}" />

            <Label
                Text="Welcome to .NET Multi-platform App UI"
                Style="{DynamicResource baseTextStyle}"
                HorizontalOptions="Center" />

            <Button
                Text="See available listings"
                Clicked="SeeAvailableListings"
                Style="{DynamicResource baseButtonStyle}"
                HorizontalOptions="Center" />
        </StackLayout>
    </StackLayout>
</ContentPage>

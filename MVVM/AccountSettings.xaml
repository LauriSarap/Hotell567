<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hotell567.MVVM.AccountSettings"
             Title="AccountSettings"
             BackgroundColor="{DynamicResource PrimaryBackground}">
    <Frame Style="{DynamicResource BaseFrameStyle}" Margin="100">
            <VerticalStackLayout>
                <Label Text="Account Info" Style="{DynamicResource MediumLabel}"/>
                <ListView x:Name="AccountSettingsView" 
                          HasUnevenRows="True" 
                          ItemsSource="{Binding CurrentUser}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout Padding="10">
                                    <HorizontalStackLayout>
                                        <Entry Text="{Binding username}" 
                                               Style="{DynamicResource BaseEntryStyle}"/>
                                        <Entry Text="{Binding password}" 
                                               Style="{DynamicResource BaseEntryStyle}"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button Text="Reset" Style="{DynamicResource BaseButtonStyle}"/>
                    <Button Text="Save" Style="{DynamicResource BaseButtonStyle}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>


<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Hotell567.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvvm="using:Hotell567.MVVM"
    FlyoutBehavior="Locked"
    FlyoutBackgroundColor="LightGray">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate mvvm:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate mvvm:LoginPage}"
        Route="LoginPage" />

</Shell>
